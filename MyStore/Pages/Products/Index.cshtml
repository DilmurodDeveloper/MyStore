@page
@model MyStore.Pages.Products.IndexModel
@{
    ViewData["Title"] = "Product List";
}

<div class="container mt-5">
    <h1 class="mb-4 text-center">🛒 Product List</h1>

    <div class="text-end mb-3">
        <a class="btn btn-success" asp-page="Create">➕ Add New Product</a>
    </div>

    <table class="table table-hover table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Brand</th>
                <th>Price ($)</th>
                <th>Description</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Products)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Brand</td>
                    <td>@item.Price.ToString("0.00")</td>
                    <td>@item.Description</td>
                    <td class="text-center">
                        <a class="btn btn-sm btn-primary me-1" asp-page="Edit" asp-route-id="@item.Id">✏️ Edit</a>
                        <a class="btn btn-sm btn-danger" asp-page="Delete" asp-route-id="@item.Id">🗑️ Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
